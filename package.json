{
  "name": "shared-component-api",
  "version": "0.0.1",
  "description": "Api de composant commun",
  "main": "server.ts",
  "scripts": {
    "build": "echo \"Building...\" && tsc -p tsconfig.json && echo \"Application is building in directory lib.\"",
    "test": "echo \"Testing...\" && nyc mocha",
    "dev": "echo \"Developing...\" && nodemon",
    "start": "echo \"Starting application...\" && node lib/server.js"
  },
  "repository": {
    "url": "https://github.com/...",
    "type": "git"
  },
  "author": "tbeghin",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "body-parser": "^1.19.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongodb": "^3.2.4",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-dist": "^3.22.1",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.26",
    "@types/morgan": "^1.7.35",
    "gulp": "^4.0.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts",
    "ignore": [
      "test/*",
      "wiki/*",
      "swagger/*",
      "node_modules/*",
      "dist/*"
    ],
    "delay": "2500",
    "exec": "ts-node --project tsconfig.json src/server.ts"
  }
}
